# MaxBreak Snooker App - Frontend Environment Variables
# Copy this file to .env and fill in the appropriate values for your environment

# ===========================================
# ENVIRONMENT CONFIGURATION
# ===========================================

# Node environment (development | production | test)
NODE_ENV=development

# ===========================================
# API CONFIGURATION
# ===========================================

# Backend API Base URL
# For development (Android Emulator): http://10.0.2.2:8000
# For development (iOS Simulator): http://localhost:8000
# For production: your deployed backend URL
API_BASE_URL=http://10.0.2.2:8000/oneFourSeven/

# API timeout in milliseconds
API_TIMEOUT=8000

# ===========================================
# EXPO/REACT NATIVE CONFIGURATION
# ===========================================

# EAS Project ID (from app.json extra.eas.projectId)
EXPO_PROJECT_ID=3a5fda2c-32ca-4319-a9be-09a82b25c20d

# App scheme for deep linking
APP_SCHEME=maxbreak

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Enable debug logging (true | false)
DEBUG_LOGGING=true

# React Native Debugger port
REACT_DEBUGGER_PORT=8081

# Metro bundler port
METRO_PORT=8081

# ===========================================
# AUTHENTICATION SETTINGS
# ===========================================

# JWT token storage key
JWT_TOKEN_KEY=userToken

# Refresh token storage key
JWT_REFRESH_TOKEN_KEY=refreshToken

# Token expiration time in minutes
JWT_EXPIRATION_MINUTES=60

# ===========================================
# ANALYTICS & TRACKING (Optional)
# ===========================================

# Google Analytics Tracking ID (if using analytics)
# GA_TRACKING_ID=GA-XXXXXXXXX

# Sentry DSN for error tracking (if using Sentry)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# PUSH NOTIFICATIONS (Optional)
# ===========================================

# Expo Push Token endpoint (if using Expo push notifications)
# EXPO_PUSH_ENDPOINT=https://exp.host/--/api/v2/push/send

# ===========================================
# FEATURE FLAGS (Optional)
# ===========================================

# Enable/disable specific features during development
ENABLE_LIVE_UPDATES=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_ANALYTICS=false

# ===========================================
# DEVELOPMENT TOOLS
# ===========================================

# Enable React Native performance monitor
ENABLE_PERFORMANCE_MONITOR=false

# Enable network inspector
ENABLE_NETWORK_INSPECTOR=true

# ===========================================
# BUILD CONFIGURATION
# ===========================================

# Build variant (development | staging | production)
BUILD_VARIANT=development

# App version (should match package.json version)
APP_VERSION=1.0.0

# Build number (incremented for each build)
BUILD_NUMBER=1

# ===========================================
# PLATFORM-SPECIFIC SETTINGS
# ===========================================

# iOS Bundle Identifier
IOS_BUNDLE_ID=com.avielpahima.maxbreaksnooker

# Android Package Name
ANDROID_PACKAGE=com.avielpahima.maxbreaksnooker

# ===========================================
# THIRD-PARTY SERVICES (if applicable)
# ===========================================

# External API endpoints (if using additional services)
# SNOOKER_ORG_API_URL=http://api.snooker.org
# SNOOKER_ORG_API_KEY=your-api-key-here

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Enable certificate pinning (for production)
ENABLE_SSL_PINNING=false

# Trusted certificate fingerprints (for certificate pinning)
# TRUSTED_CERT_FINGERPRINTS=sha256/fingerprint1,sha256/fingerprint2

# ===========================================
# CACHE SETTINGS
# ===========================================

# Cache expiration time in minutes
CACHE_EXPIRATION_MINUTES=30

# Maximum cache size in MB
MAX_CACHE_SIZE_MB=100

# ===========================================
# NOTES
# ===========================================
# 1. Never commit sensitive data like API keys or passwords to version control
# 2. Use different values for development, staging, and production environments
# 3. Some variables may be used by build scripts or CI/CD pipelines
# 4. Remove or comment out unused variables to keep the file clean
# 5. Update this file when adding new environment-dependent configurations